!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{content: "IE=edge,chrome=1", 'http-equiv' => "X-UA-Compatible"}
    %link{rel: "alternate", type: "application/rss+xml", title: "Blog RSS Feed", href: "/blog/feed.xml" }
    %meta{content: "webkit", name: "renderer"}

    %title= [@title,current_page.data.title,"'ju:femaiz"].compact.uniq.join(" « ")

    -# Favicons
    -
    %link{ href: "/assets/icons/favicon-32px.png", rel: "icon" }
    %link{ href: "/assets/icons/touch-icon-iphone.png", rel: "apple-touch-icon" }
    %link{ href: "/assets/icons/touch-icon-ipad.png", rel: "apple-touch-icon", sizes: "76x76" }
    %link{ href: "/assets/icons/touch-icon-iphone-retina.png", rel: "apple-touch-icon", sizes: "120x120" }
    %link{ href: "/assets/icons/touch-icon-ipad-retina.png", rel: "apple-touch-icon", sizes: "152x152" }

    -# Canonical Reference
    -
    %link{ rel: "canonical", href: "#{settings.url_root}#{current_page.url}"}

    -# Other Stuff - Custom Fonts
    %link{href: "http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", rel: "stylesheet", type: "text/css"}/
    %link{href: "http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic", rel: "stylesheet", type: "text/css"}/
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800", rel: "stylesheet", type: "text/css"}/


  %body{class: page_classes }
    / Navigation
    %nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header.page-scroll
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "index.html"} 'ju:femaiz
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: "/"} Home
            %li
              %a{href: "/about"} About
            %li
              %a{href: "/blog"} Archives
            %li
              %a{href: "/contact"} Contact
        / /.navbar-collapse
      / /.container

    = yield

    / Footer
    %footer
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            %ul.list-inline.text-center
              %li
                %a{href: "https://twitter.com/jufemaiz"}
                  %span.fa-stack.fa-lg
                    %i.fa.fa-circle.fa-stack-2x
                    %i.fa.fa-twitter.fa-stack-1x.fa-inverse
              %li
                %a{href: "https://facebook.com/jufemaiz"}
                  %span.fa-stack.fa-lg
                    %i.fa.fa-circle.fa-stack-2x
                    %i.fa.fa-facebook.fa-stack-1x.fa-inverse
              %li
                %a{href: "https://github.com/jufemaiz"}
                  %span.fa-stack.fa-lg
                    %i.fa.fa-circle.fa-stack-2x
                    %i.fa.fa-github.fa-stack-1x.fa-inverse
            %p.copyright.text-muted Copyright © Your Website 2004 - #{Date.today.year}

    - # This is all the stylesheets and javascript, moved to the bottom of the page

    -# Stylesheets
    -
    = stylesheet_link_tag "application"

    -# Javascripts
    -
    = javascript_include_tag "application"
    / Custom Theme JavaScript
    %script{src: "js/clean-blog.min.js"}
